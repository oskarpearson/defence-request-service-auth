<div class="field">
  <%= "#{t("user")}: #{@membership.user.name} (#{@membership.user.email})" %>
  <%= f.hidden_field :user_id %>
</div>

<div class="field">
  <h3>Roles</h3>
  <%= f.collection_check_boxes :roles, @organisation.available_roles.sort, :name, :name do |b| %>
